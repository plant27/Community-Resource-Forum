{
  "$schema": "https://turborepo.com/schema.json",
  "globalPassThroughEnv": ["SKIP_ENV_VALIDATION"],
  "tasks": {
    "db:generate": {
      "dependsOn": [],
      "outputs": ["migrations/ddl.sql"]
    },
    "docker:ready": {
      "cache": false
    },
    "build": {
      "env": [
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_REDIRECT_URL",
        "MYSQL_USER",
        "MYSQL_PASSWORD",
        "MYSQL_HOST",
        "MYSQL_PORT",
        "MYSQL_DATABASE",
        "S3_PORT",
        "S3_REGION",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY"
      ],
      "dependsOn": ["db:generate"],
      "outputs": [".next/**"]
    },
    "Next.js": {
      "dependsOn": [],
      "persistent": true,
      "cache": false
    },
    "Drizzle Studio": {
      "dependsOn": [],
      "persistent": true,
      "cache": false
    },
    "typegen": {
      "dependsOn": [],
      "outputs": [".next/**", "next-env.d.ts", "tsconfig.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["typegen"]
    },
    "prettier": {
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": ["typegen"]
    }
  }
}
